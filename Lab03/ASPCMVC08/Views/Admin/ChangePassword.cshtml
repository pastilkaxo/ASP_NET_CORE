@{
    Layout = "/Areas/Identity/Pages/Shared/_Layout.cshtml";
    ViewBag.Title = "Change Password Panel";
}

<div class="text-center">
    <h2>Изменить пароль</h2>
    @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post))
    {
        <div class="form-group">
            <label for="oldpassword">Старый пароль</label>
            <input name="oldpassword" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="newpassword">Новый пароль</label>
            <input name="newpassword" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Изменить пароль</button>
    }
</div>